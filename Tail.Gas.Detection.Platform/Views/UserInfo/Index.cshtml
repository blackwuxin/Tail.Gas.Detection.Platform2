<style type="text/css">
    td {
        word-wrap: break-word;
        word-break: break-all;
        white-space: normal;
    }
</style>
<form id="search_form" class="ng-pristine ng-valid" method="post">
    <div class="col-md-12">

        <div class="form-group col-md-3">
            <label class="col-sm-4 control-label">用户名：</label>
            <div class="col-sm-8">
                <input type="text" id="username" class="form-control ng-pristine ng-valid" placeholder="用户名">
            </div>
        </div>
    
        <div class="form-group col-md-3">
            <div class="form-group col-md-4" style="text-align: right;">
                <input id="btn-search" type="button" class="btn btn-primary btn-sm search-btn" value="查询" />
            </div>
            <div class="form-group col-md-4" style="text-align: right;">
                <input id="btn-add" type="button" class="btn btn-primary btn-sm search-btn" value="新增" />
            </div>
        </div>
    </div>
</form>

<div style="margin-top: 20px;">
    <table id="pclist" class="table table-striped table-bordered  table-hover" cellspacing="0">
        <thead>
            <tr style="background-color: #337ab7; color: white;">
                <th  class="text-center">序号</th>
                <th  class="text-center">用户名</th>
                <th  class="text-center">密码</th>
                <th class="text-center">创建时间</th>
                <th class="text-center">修改时间</th>
                <th class="text-center">操作</th>
            </tr>
        </thead>

        <tbody></tbody>
    </table>
</div>

<div class="modal fade" id="save-user-panel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="modal-title" class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" id="save-user-id" />

                    <div class="form-group">
                        <label for="save-rolename">用户名：</label>
                        <input type="text" class="form-control" id="save-username" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="save-rolename">密码：</label>
                        <input type="text" class="form-control" id="save-password" placeholder="">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    关闭
                </button>
                <button type="button" id="btn-save" class="btn btn-primary">
                    保存
                </button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    seajs.use(['$', 'userinfo'], function ($, userinfo) {;
        $(document).ready(function () {
            userinfo.init();
                     
        });
    });
</script>
